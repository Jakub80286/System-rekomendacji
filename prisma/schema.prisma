// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Tag {
  tag_id     Int      @id @default(autoincrement())
  tag_name   String   @unique
  createdAt  DateTime @default(now())
  userId     Int

  user       User @relation(fields: [userId], references: [id])
  photoTags  PhotoTag[]
}


model PhotoTag {
  photo_id Int
  tag_id   Int

  photo    Photo @relation(fields: [photo_id], references: [photo_id])
  tag      Tag   @relation(fields: [tag_id], references: [tag_id])

  @@id([photo_id, tag_id])
}


model Photo {
  photo_id      Int      @id @default(autoincrement())
  title         String   @unique
  description   String?
  url           String
  createdAt     DateTime @default(now())
  userId        Int

  likes      UserLike[]
  photoTags  PhotoTag[]
  user       User @relation(fields: [userId], references: [id])

}


model UserLike {
  user_id  Int
  photo_id Int

  user  User  @relation(fields: [user_id], references: [id])
  photo Photo @relation(fields: [photo_id], references: [photo_id])

  @@id([user_id, photo_id])
}

model User {
  id   Int          @id @default(autoincrement())
  email     String    @unique
  hash     String
  createdAt DateTime  @default(now())
  role      Role   @default(USER)

  likes UserLike[]
  photo Photo[]
  tag Tag[]
}

enum Role {
  USER
  ADMIN
}

model Song {
  id                String    @id
  name              String?
  acousticness      Float  
  danceability      Float
  duration_ms       Int
  energy            Float
  instrumentalness  Float
  key               Int
  liveness          Float
  loudness          Float
  mode              Int
  speechiness       Float
  tempo             Float
  time_signature    Int
  valence           Float
  popularity        Float?
  songArtists       SongArtist[]
}

model Artist {
  id                String @id
  name              String
  popularity        Float
  genres            String[]
  followers         Float
  songArtists       SongArtist[]
}

model SongArtist {
  artist_id         String
  song_id           String
  artist            Artist @relation(fields: [artist_id], references: [id])
  song              Song @relation(fields: [song_id], references: [id])
  @@id([artist_id, song_id])
}
